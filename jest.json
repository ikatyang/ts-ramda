{
  "transform": {
    "/tests/.+\\.ts$": "dts-jest",
    "/utils/.+\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
  },
  "testRegex": "/tests/.+\\.ts$",
  "testPathIgnorePatterns": ["/dts-jest/"],
  "moduleFileExtensions": ["ts", "js"],
  "globals": {
    "_dts_jest_": {
      "type_detail": true,
      "snapshot_formatter": "utils/snapshot-formatter.ts"
    }
  }
}
